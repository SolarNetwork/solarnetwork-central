<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
    <info organisation="net.solarnetwork.central.test" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="javadoc" visibility="public" description="Javadoc documentation"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom" conf="compile"/>
		<artifact type="bundle" ext="jar" conf="runtime"/>
		<artifact type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(runtime)">
		<!-- Logging -->
    	<dependency org="log4j" name="log4j" rev="1.2.17"/>
    	<dependency org="org.slf4j" name="slf4j-api" rev="1.7.24"/>
		<dependency org="org.slf4j" name="slf4j-log4j12" rev="1.7.24" conf="runtime"/>
		<dependency org="org.slf4j" name="jcl-over-slf4j" rev="1.7.24" conf="runtime"/>
		<dependency org="org.slf4j" name="jul-to-slf4j" rev="1.7.24"/>
		<dependency org="org.slf4j" name="osgi-over-slf4j" rev="1.7.24" conf="runtime"/>

		<!-- Testing -->
		<dependency org="junit" name="junit" rev="4.12"/>
		<dependency org="org.springframework" name="spring-test" rev="4.2.6.RELEASE"/>

		<!-- Testing support -->
		<dependency org="org.postgresql" name="postgresql" rev="42.0.0" conf="runtime"/>
		<dependency org="org.apache.tomcat" name="tomcat-jdbc" rev="7.0.64" conf="runtime"/>
		<dependency org="org.springframework" name="spring-jdbc" rev="4.2.6.RELEASE"/>

		<!-- SolarNetwork -->
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.common.security" rev="1.16"/>
    </dependencies>
</ivy-module>
