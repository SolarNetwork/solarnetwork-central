<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
    <info organisation="net.solarnetwork.central" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom" conf="compile"/>
		<artifact type="bundle" ext="jar" conf="runtime"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(runtime)">
		<dependency org="com.fasterxml.jackson.core" name="jackson-databind" rev="2.4.3" />
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.common" rev="[1.32.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.common.mail" rev="[1.1.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.common.security" rev="[1.12.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.common.web" rev="[1.13.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.datum" rev="[1.20.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.instructor" rev="[1.2.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.query" rev="[2.0.0,3.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.user" rev="[1.23.0,2.0.0)"/>
		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common" rev="[1.34.0,2.0.0)"/>
		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common.web" rev="[1.8.0,2.0.0)"/>
		<dependency org="javax.servlet" name="com.springsource.javax.servlet" rev="2.5.0" />
		<dependency org="joda-time" name="joda-time" rev="2.4"/>
    	<dependency org="org.slf4j" name="slf4j-api" rev="1.7.21"/>
		<dependency org="org.springframework" name="spring-webmvc" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework.security" name="spring-security-core" rev="4.1.0.RELEASE"/>
    </dependencies>
</ivy-module>
