 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.datum" rev="[1.17.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.in.biz" rev="[1.14.0,2.0.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.instructor" rev="[1.1.0,2.0.0)"/>
