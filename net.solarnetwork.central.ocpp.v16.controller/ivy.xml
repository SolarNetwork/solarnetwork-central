<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
    <info organisation="net.solarnetwork.central" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="javadoc" visibility="public" description="Javadoc documentation"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom" conf="compile"/>
		<artifact type="bundle" ext="jar" conf="runtime"/>
		<artifact type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(runtime)">
		<dependency org="org.mybatis" name="mybatis" rev="3.5.4" />
		<dependency org="org.mybatis" name="mybatis-spring" rev="1.3.3" />
 		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common" rev="[1.60,)"/>
 		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common.ocpp" rev="[1.1,)"/>
 		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common.ocpp.v16" rev="[1.1,)"/>
 		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common.pki.bc" rev="[1.3,)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.common" rev="[2.2,)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.datum" rev="[2.1,3.0)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.instructor" rev="[1.9,)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.ocpp" rev="[1.1,)"/>
 		<dependency org="net.solarnetwork.central" name="net.solarnetwork.central.user" rev="[2.1,)"/>
	</dependencies>
</ivy-module>
